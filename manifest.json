{
  "manifest_version": 3,
  "name": "Venue Calendar",
  "version": "1.021",
  "description": "Implements column view based on location in Google Calendar.",
  "content_scripts": [
    {
      "matches": [
        "http://calendar.google.com/calendar*",
        "https://calendar.google.com/calendar*"
      ],
      "js": [
        "misc/jquery.3.7.1.min.js",
        "src/helper/index.js",
        "src/vars/selectors.js",
        "src/vars/style.js",
        "src/vars/regex.js",
        "src/observer.js",
        "src/language.js",
        "src/popup.js",

        "src/modes/day.js",
        "src/modes/week.js",
        "src/modes/event_modal.js",
        
        "src/src.js"
      ],
      "css": [
        "style.css"
      ],
      "web_accessible_resources": [
        "images/128.png"
      ],
      "runAt": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["images/128.png"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "html/popup.html"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://calendar.google.com/calendar*"
  ]
}